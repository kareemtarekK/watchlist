generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  watchlistItems WatchListItem[] @relation("userWatchlistItem")
  movies         Movie[]         @relation("create movie")
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  overview    String?
  releaseYear Int
  geners      String[] @default([])
  runtime     Int?
  posterUrl   String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  watchListItems WatchListItem[] @relation("moviehaveWatchlistItem")

  user User @relation("create movie", fields: [createdBy], references: [id], onDelete: Cascade)
}

enum WatchListStatus {
  PLANNED
  WATCHING
  COMPLETED
  DROPED
}

model WatchListItem {
  id        String          @id @default(uuid())
  userId    String
  movieId   String
  rating    Int?
  status    WatchListStatus @default(PLANNED)
  notes     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user  User  @relation("userWatchlistItem", fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation("moviehaveWatchlistItem", fields: [movieId], references: [id], onDelete: Cascade)
}
